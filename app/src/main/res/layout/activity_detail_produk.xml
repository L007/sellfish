<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.eldi.sellfish.detailProduk">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- Thumbnail Image -->
    <com.android.volley.toolbox.NetworkImageView
        android:background="#000000"
        android:id="@+id/img_gambar_ikan"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <!-- Movie Title -->
    <TextView
        android:text="Nama ikan"
        android:textColor="#000000"
        android:id="@+id/txt_nama_ikan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10pt"
        android:textStyle="bold"
        android:layout_below="@+id/img_gambar_ikan"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="14dp" />

    <!-- Rating -->


    <TextView
        android:textStyle="bold"
        android:id="@+id/txt_harga"
        android:text="harga"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="7pt"
        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@+id/txt_nama_ikan"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="jumlah stok"
        android:id="@+id/txt_jumlah_stok"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="#4CAF50"
        android:textSize="7pt"
        android:layout_below="@+id/txt_harga"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <!-- Genre -->

    <!-- Release Year -->
    <TextView
        android:text="penjual"
        android:layout_marginTop="8dp"
        android:id="@+id/txt_penjual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="7pt"
        android:layout_below="@+id/txt_jumlah_stok"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Deskripsi :"
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="7pt"
        android:layout_below="@+id/txt_penjual"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp" />

    <TextView
        android:text="Deskripsi"
        android:id="@+id/txtDeskripsi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="7pt"
        android:layout_below="@+id/textView3" />

    <EditText
        android:hint="masukan jumlah beli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/etJumlahBeli"
        android:layout_below="@+id/txtDeskripsi"
        android:layout_marginTop="10dp" />
    <EditText
        android:hint="Alamat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/etAlamat"
        android:layout_below="@+id/etJumlahBeli"
        android:layout_marginTop="10dp" />

    <TextView
        android:text="kg"
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="7pt"
        android:layout_alignBaseline="@+id/etJumlahBeli"
        android:layout_alignBottom="@+id/etJumlahBeli"
        android:layout_toRightOf="@+id/etJumlahBeli"
        android:layout_toEndOf="@+id/etJumlahBeli" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Beli"
        android:id="@+id/btnBeli"
        android:layout_below="@+id/etAlamat"
        android:layout_marginTop="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
</ScrollView>

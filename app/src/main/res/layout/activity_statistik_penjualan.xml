<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="0dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.eldi.sellfish.StatistikPenjualan">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tanggal"
        android:textSize="12pt"
        android:id="@+id/txtTanggal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Pendapatan "
        android:id="@+id/textView6"
        android:layout_below="@+id/txtTanggal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="51dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:textSize="12pt"
        android:id="@+id/txtTotalPendapatan"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Ikan Terjual"
        android:id="@+id/textView8"
        android:layout_alignBaseline="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="34dp"
        android:layout_marginEnd="34dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:textSize="12pt"
        android:id="@+id/txtTotalIkanTerjual"
        android:layout_alignBottom="@+id/txtTotalPendapatan"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ikan Terlaris"
        android:id="@+id/textView9"
        android:layout_marginTop="70dp"
        android:layout_below="@+id/txtTotalPendapatan"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Penjualan Bulan Depan"
        android:id="@+id/textView10"
        android:layout_alignTop="@+id/textView9"
        android:layout_alignLeft="@+id/txtTotalIkanTerjual"
        android:layout_alignStart="@+id/txtTotalIkanTerjual" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Nama ikan segar"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:textSize="12pt"
        android:id="@+id/txtNamaIkanTerlaris"
        android:layout_below="@+id/textView10"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:textSize="12pt"
        android:id="@+id/txtPeramalan"
        android:layout_alignBaseline="@+id/txtNamaIkanTerlaris"
        android:layout_alignBottom="@+id/txtNamaIkanTerlaris"
        android:layout_alignLeft="@+id/textView10"
        android:layout_alignStart="@+id/textView10" />
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="8dp" >

    <!--android:background="@drawable/list_row_selector"-->

    <!-- Thumbnail Image -->
    <com.android.volley.toolbox.NetworkImageView
        android:background="#000000"
        android:id="@+id/img_gambar_ikan"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="8dp" />

    <!-- Movie Title -->
    <TextView
        android:textColor="#000000"
        android:text="Nama ikan"
        android:id="@+id/txt_nama_ikan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/img_gambar_ikan"
        android:layout_toRightOf="@+id/img_gambar_ikan"
        android:textSize="10pt"
        android:textStyle="bold" />

    <!-- Rating -->
    <TextView
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:id="@+id/txt_harga"
        android:text="harga"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_nama_ikan"
        android:layout_marginTop="1dip"
        android:layout_toRightOf="@+id/img_gambar_ikan"
        android:textSize="7pt" />

    <!-- Genre -->
    <TextView
        android:text="jumlah pesanan"
        android:id="@+id/txt_jumlah_pesanan"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_harga"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/img_gambar_ikan"
        android:textColor="#000000"
        android:textSize="10pt" />

    <!-- Release Year -->
    <TextView
        android:text="pembeli"
        android:id="@+id/txt_pembeli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="7pt"
        android:layout_below="@+id/img_gambar_ikan"
        android:layout_alignLeft="@+id/txt_jumlah_pesanan"
        android:layout_alignStart="@+id/txt_jumlah_pesanan" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.eldi.sellfish.TambahProdcutActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:background="#00000000"
            android:height="200dp"
            android:width="200dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tap here"
            android:id="@+id/btnBrowseProduk"
            android:layout_alignTop="@+id/imgIkan"
            android:layout_alignLeft="@+id/imgIkan"
            android:layout_alignStart="@+id/imgIkan"
         />

        <ImageView
            android:background="@drawable/box_photo"
            android:id="@+id/imgIkan"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="19dp"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/txtNamaIkan"
            android:layout_alignStart="@+id/txtNamaIkan" />

        <TextView
            android:id="@+id/txtNamaIkan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imgIkan"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:text="Nama ikan"
            android:textColor="#000000"
            android:textSize="10pt" />

        <EditText
            android:id="@+id/etNamaIkan"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtNamaIkan"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/txtHargaIkan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etNamaIkan"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Harga"
            android:textColor="#000000"
            android:textSize="10pt" />
        <EditText
            android:id="@+id/etRp"
            android:hint="Rp"
            android:textAlignment="center"
            android:textColorHint="#000000"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtHargaIkan"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp" />

        <EditText
            android:id="@+id/etHargaIkan"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/etRp"
            android:layout_toRightOf="@+id/txtHargaIkan"
            android:layout_toEndOf="@+id/txtHargaIkan"
            android:layout_marginLeft="25dp"/>

        <EditText
            android:id="@+id/etPerKg"
            android:hint="/kg"
            android:textAlignment="center"
            android:textColorHint="#000000"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_marginLeft="25dp"
            android:layout_alignTop="@+id/etHargaIkan"
            android:layout_toRightOf="@+id/etHargaIkan"
            android:layout_toEndOf="@+id/etHargaIkan" />

        <TextView
            android:id="@+id/txtStok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etRp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Stok"
            android:textColor="#000000"
            android:textSize="10pt" />
        <EditText
            android:id="@+id/etStokIkan"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtStok"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp" />
        <EditText
            android:id="@+id/etPerKg2"
            android:hint="kg"
            android:textAlignment="center"
            android:textColorHint="#000000"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_alignBaseline="@+id/etStokIkan"
            android:layout_alignBottom="@+id/etStokIkan"
            android:layout_alignLeft="@+id/etPerKg"
            android:layout_alignStart="@+id/etPerKg" />
        <TextView
            android:id="@+id/txtDeskripsiIkan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            
            android:layout_below="@+id/etStokIkan"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Deskripsi"
            android:textColor="#000000"
            android:textSize="10pt" />

        <EditText
            android:id="@+id/etDeskripsiIkan"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtDeskripsiIkan"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp" />

        <ImageButton
            android:id="@+id/btnUploadProduk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_tambah_ikan"
            android:layout_centerInParent="true"
            android:background="#00000000"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/etDeskripsiIkan"
            android:layout_marginBottom="30dp"


            />



    </RelativeLayout>




</ScrollView>
